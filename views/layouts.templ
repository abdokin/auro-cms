package views

templ heading( title string) {
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>{ title }</title>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>
}

templ guestLayout(contents templ.Component,title string) {
	<!DOCTYPE html>
	<html lang="en">
		@heading(title)
		<body>
			<div class="container mx-auto mt-5">
				@contents
			</div>
		</body>
	</html>
}
